<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/listViewSpacing">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="8dp">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTitle"
                style="@style/NewsTitleStyle"
                tools:text="This is news Title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standardPadding">

                <androidx.cardview.widget.CardView
                    android:id="@+id/newsImageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/newsImage"
                        style="@style/NewsImageStyle"
                        android:src="@drawable/image_placeholder" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/newsDescription"
                    style="@style/NewsDescriptionStyle"
                    android:layout_toEndOf="@+id/newsImageContainer"
                    tools:Text="Hello how are you" />



            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>