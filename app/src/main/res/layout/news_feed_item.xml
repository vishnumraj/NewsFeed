<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/listViewSpacing"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/NewsTitleStyle"
                android:id="@+id/newsTitle"
                tools:text="This is news Title" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="@dimen/standardPadding">

                <TextView
                    android:layout_toStartOf="@+id/newsImage"
                    style="@style/NewsDescriptionStyle"
                    android:id="@+id/newsDescription"
                    tools:Text="Hello how are you" />

                <ImageView
                    android:src="@drawable/image_placeholder"
                    style="@style/NewsImageStyle"
                    android:id="@+id/newsImage" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>